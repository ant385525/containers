{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["github>home-operations/renovate-config"],
  customManagers: [
    {
      customType: "regex",
      description: "Process Annotations in Docker Bake",
      fileMatch: ["(^|/)docker-bake\\.hcl$"],
      matchStrings: [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\n.+ = \"(?<currentValue>[^\"]+)\"",
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
  customDatasources: {
    fileflows: {
    defaultRegistryUrlTemplate: "https://fileflows.com/auto-update/latest-version?platform=docker",
    format: "plain",
  }
  },
  packageRules: [
    {
      description: ["Auto-merge Application Updates"],
      matchFileNames: ["**/docker-bake.hcl"],
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
    {
      description: ["Allowed Ubuntu Version"],
      matchDatasources: ["docker"],
      matchPackageNames: ["/ubuntu/"],
      allowedVersions: "/24\\.04/",
    },
    {
      description: ["Allowed Python Version for Calibre-Web-Automated"],
      matchDatasources: ["docker"],
      matchFileNames: ["apps/calibre-web-automated/Dockerfile"],
      matchPackageNames: ["/python/"],
      allowedVersions: "/3\\.12/",
    },
    {
      description: ["Repository to lookup jellyfin-ffmpeg7"],
      "matchDatasources": ["deb"],
      "matchPackageNames": ["jellyfin-ffmpeg7"],
      "registryUrls": [
        "https://repo.jellyfin.org/ubuntu?suite=jammy&components=main&binaryArch=amd64"
      ]
    },
  ],
}
